<main class="row w-100 m-0">
  <div id="memeContainer" class="container position-relative m-1 h-auto p-0 col-12 col-xl-6">
    <div class="container  h-auto w-auto">
      <img class="my-w" src="{{picture.url}}" />
    </div>
    <div class="position-absolute top-0 start-50 translate-middle-x">
      <h1 id="upperText" class="text-uppercase text-white">

      </h1>
    </div>
    <div class="position-absolute bottom-0 start-50 translate-middle-x">
      <h1 id="lowerText" class="text-uppercase text-white">
      </h1>
    </div>
  </div>

  <div id="phraseInputContainer" data-picid="{{picture.id}}" class="container position-relative m-1 h-auto  p-2 col-12 col-xl-5">
    <div class="memeSubmission">
      <h2 class="submission-title text-center">Some Words</h2>
      <form class="form" id="meme-form">
        <div class="form-group">
          <label for="upperTextInput">
            <h5>Upper Text:</h5>
          </label>
          <input class="form-input w-100" type="text" id="upperTextInput" />
        </div>
        <div class="form-group">
          <label for="lowerTextInput">
            <h5>Lower Text:</h5>
          </label>
          <input class="form-input w-100" type="text" id="lowerTextInput" />
        </div>
                        <div class="form-group p-2 text-center">
          <button id="view-button" class="btn btn-primary" type="button">Preview</button>
        </div>

        <div class="form-group p-2 text-center">
          <button id="submit-button" class="btn btn-primary" type="submit">Submit</button>
        </div>

        <div class="form-group p-2 text-center">
          <a href= "#" class="btn btn-primary" id= "btnSave" type="submit">Download</a>
        </div>

      </form>
    </div>
  </div>

  <div>
</main>

<div class="container-fluid text-center ">
  <div id="history-button-group" class="btn-group-vertical m-2 col-6" role="group">
    {{#each picture.phrases as |phrase|}}
    {{>phrase-button}}
    {{/each}}
  </div>
  {{!-- {{picture.id}} --}}
</div>


